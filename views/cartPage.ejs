<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <title>Cart - PerabotDia</title>
</head>
<body>
  <%- include("./partial/navbar.ejs") %>
  <div class="container">
    <div>
      <h1>
        Cart milik Kamu 
      </h1>
    </div>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Image Url</th>
          <th scope="col">Nama Product</th>
          <th scope="col" class="d-flex justify-content-end">Price</th>
          <th scope="col" >Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((el, i) => { %>
          <tr>
            <td> <%= i + 1 %>  </td>
            <td> <%= el.Product.imageUrl %>  </td>
            <td> <%= el.Product.name %>  </td>
            <td class="d-flex justify-content-end"> <%= formatRupiah(el.Product.price) %> </td>
            <td> <a class="btn btn-danger" href="/cart/delete/<%= el.id %>">Delete</a> </td>
          </tr>
          <% }) %> 
        </tbody>
      </table>
      <% if(data.length === 0) { %>
        <h1 class="d-flex justify-content-center"> Keranjang kamu kosong BRO</h1>
      <% } else { %>
        <div class="d-flex justify-content-end ">
          <p class="font-weight-bold mr-5">Harga Total :<%= formatRupiah(hargaTotal) %></p> 
          <a class="btn btn-danger" href="/cart/checkout">CheckoutGan</a>
        </div>
      <% } %> 
  </div>
</body>
</html>